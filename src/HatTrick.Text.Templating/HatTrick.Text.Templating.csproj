<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <Authors>Jerrod Eiman</Authors>
    <Company>HatTrick Labs LLC</Company>
    <Description>Text templating utilities.</Description>
    <Copyright>Hat Trick Labs</Copyright>
    <PackageLicenseUrl></PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/HatTrickLabs/txt</PackageProjectUrl>
    <RepositoryUrl>https://github.com/HatTrickLabs/txt</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>text template templating engine template-engine</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Version>2.0.0</Version>
    <PackageReleaseNotes>1. Enhanced white-space control: allow white-space retention via the + tag marker.
2. Variable declaration and usage within templates.
3. Refactored lambda repo (infer numeric literals, allow declared variables as arguments).
4. Fixed whitespace control to trim 1 newline from the right vs the left of block tags.
5. Implemented formal unit test framework.</PackageReleaseNotes>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HatTrick.Reflection" Version="1.0.5" />
  </ItemGroup>

</Project>
