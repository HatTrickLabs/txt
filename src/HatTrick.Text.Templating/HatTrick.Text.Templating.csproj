<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <Authors>Jerrod Eiman</Authors>
    <Company>Hat Trick Labs</Company>
    <Description>Text templating utilities.</Description>
    <Copyright>Hat Trick Labs</Copyright>
    <PackageLicenseUrl>https://github.com/HatTrickLabs/txt/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/HatTrickLabs/txt</PackageProjectUrl>
    <RepositoryUrl>https://github.com/HatTrickLabs/txt</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>text template templating engine template-engine</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Version>1.1.0</Version>
    <PackageReleaseNotes>1.  Enhanced whitespace: allow whitespace retention via the + tag marker.
2.  Variable declaration and usage within templates.
3.  Implemented formal unit test framework.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HatTrick.Reflection" Version="1.0.5" />
  </ItemGroup>

</Project>
